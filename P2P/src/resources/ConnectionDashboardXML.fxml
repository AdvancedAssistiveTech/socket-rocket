<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane fx:id="mainPanel" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.controllers.DashboardController">
   <tabs>
      <Tab text="Outgoing connection">
         <content>
            <VBox fx:id="outgoingBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="335.0" prefWidth="400.0">
               <children>
                  <ImageView fx:id="logoView" fitHeight="245.0" fitWidth="380.0" pickOnBounds="true" preserveRatio="true" />
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0">
                     <children>
                        <Label text="Target ID:">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="targetIDCombo" editable="true" prefWidth="217.0" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </ComboBox>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="181.0" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="localIDLabel" text="This device's ID is:">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Button fx:id="connectBtn" mnemonicParsing="false" text="Connect to">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab text="Incoming connections">
         <content>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <VBox fx:id="incomingBox" prefHeight="335.0" prefWidth="400.0" />
               </content>
            </ScrollPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
